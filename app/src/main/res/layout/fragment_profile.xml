<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Profile.ProfileFragment">

    <FrameLayout
        android:id="@+id/frameL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/editText"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/backImage"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <TextView
        android:id="@+id/tvOne"
        android:layout_marginBottom="8dp"
        android:text="109"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tvFour"
        app:layout_constraintStart_toStartOf="@id/tvFour"
        app:layout_constraintEnd_toEndOf="@id/tvFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTwo"
        android:layout_marginBottom="8dp"
        android:text="2,062"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tvFive"
        app:layout_constraintStart_toStartOf="@id/tvFive"
        app:layout_constraintEnd_toEndOf="@id/tvFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvThree"
        android:layout_marginBottom="8dp"
        android:text="89"
        app:layout_constraintBottom_toTopOf="@id/tvSix"
        app:layout_constraintStart_toStartOf="@id/tvSix"
        app:layout_constraintEnd_toEndOf="@id/tvSix"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvFour"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@id/frameL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvFive"
        android:text="Following"
        android:textColor="@color/gray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvFive"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@id/frameL"
        app:layout_constraintStart_toEndOf="@id/tvFour"
        app:layout_constraintEnd_toStartOf="@id/tvSix"
        android:text="Followers"
        android:textColor="@color/gray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvSix"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@id/frameL"
        app:layout_constraintStart_toEndOf="@id/tvFive"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Posts"
        android:textColor="@color/gray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_gallery"
        android:src="@drawable/ic_gallery"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editText"
        android:layout_width="160dp"
        android:layout_height="160dp"/>
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        app:layout_constraintTop_toBottomOf="@id/iv_gallery"/>

    <Button
        android:id="@+id/btnSave"
        android:text="Save"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>